@model MahaliDtos.ReportListItems

<link href="~/css/report.css" rel="stylesheet" />

<h2 class="mt-4 mb-4 text-center">Write a Report</h2>

<form asp-action="AddReport" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <!-- Hidden input field for ID -->
        <input type="hidden" asp-for="Shop.Id" />
        <input type="hidden" asp-for="Shop.Name" />
        <input type="hidden" asp-for="Shop.Description" />
        <input type="hidden" asp-for="Shop.Email" />
        <input type="hidden" asp-for="Shop.PhoneNumber" />
        <input type="hidden" asp-for="Id" />

        <label asp-for="ReportText" class="form-label fw-bold">Report Text:</label>
        <textarea asp-for="ReportText" class="form-control" rows="6" placeholder="Enter your report here..."></textarea>
        <span asp-validation-for="ReportText" class="text-danger mt-1"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<a asp-action="GetAllShops" class="btn btn-secondary mt-3">Back to List</a>
