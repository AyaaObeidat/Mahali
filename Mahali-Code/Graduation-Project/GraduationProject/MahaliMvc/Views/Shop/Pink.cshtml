@model List<MahaliDtos.ProductListItems>
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-white mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height:100px;">
        <h1 class="font-weight-semi-bold text-uppercase mb-3 text-black">Pink</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="#" class="text-black" style="font-size: 24px; color: #902525;">Home</a></p>
            <p class="m-0 px-2 text-black" style="font-size: 24px;">-</p>
            <p class="m-0 text-black" style="font-size: 24px;">Shop</p>
        </div>
    </div>
</div>



<div class="col-lg-9 col-md-12">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <img class="card-img-top" src="@Url.Content(product.ImageUri)" alt="@product.Name">
                        <h4 class="card-title">@product.Name</h4>
                        <h5>@product.Price.ToString("0.00") JOD</h5>
                        <p class="card-text">@product.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="@Url.Action("View", "Product", new { id = product.Id })">View</a>
                        <button class="btn btn-outline-danger btn-sm" onclick="deleteProduct('@product.Id')">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-lg-6">
            <h2>Our Location</h2>
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13541.3154892013!2d35.949493244580076!3d31.9519736!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151b5f183bc55211%3A0xddbc5185aa65226a!2zQmxhY2sgJiBwaW5rINin2YPYs9iz2YjYp9ix2KfYqiDYp9iz2YjYryDZiCDYstmH2LHZig!5e0!3m2!1sar!2sjo!4v1717439845526!5m2!1sar!2sjo" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>