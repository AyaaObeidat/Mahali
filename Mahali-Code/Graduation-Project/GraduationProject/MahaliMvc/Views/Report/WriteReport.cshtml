@model MahaliDtos.ReportCreateParameters

<link href="~/css/report.css" rel="stylesheet" />

<h2 class="mt-4 mb-4 text-center">Write a Report</h2>

<form asp-action="WriteReport" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label asp-for="ReportText" class="form-label fw-bold">Report Text:</label>
        <textarea asp-for="ReportText" class="form-control" rows="6" placeholder="Enter your report here..."></textarea>
        <span asp-validation-for="ReportText" class="text-danger mt-1"></span>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

